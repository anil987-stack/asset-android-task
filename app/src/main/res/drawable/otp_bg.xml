<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@android:color/white"/>

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Border -->
    <stroke
        android:width="1.5dp"
        android:color="#c2c2c2"/>

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
